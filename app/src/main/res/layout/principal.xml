<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/btAtras"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/foto"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="280dp"
        android:drawableBottom="@android:drawable/ic_media_rew"
        android:onClick="retroceder"/>

    <Button
        android:id="@+id/btAdelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="284dp"
        android:layout_toEndOf="@+id/btAtras"
        android:drawableBottom="@android:drawable/ic_media_ff"
        android:text="Button" />

</RelativeLayout>